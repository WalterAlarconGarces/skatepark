    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form action='/usuario' method="POST"  enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label for="email">Email</label>
            <input class="form-control m-auto" name="email" id="email"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="nombre">Nombre</label>
            <input class="form-control m-auto" name="nombre" id="nombre"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="password">Password</label>
            <input class="form-control m-auto" name="password" id="password"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="repita_la_password">Repita la password</label>
            <input class="form-control m-auto" name="repita_la_password" id="repita_la_password"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="anos_experiencia">Años de experiencia</label>
            <input class="form-control m-auto" name="anos_experiencia" id="anos_experiencia"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="especialidad">Especialidad</label>
            <input class="form-control m-auto" name="especialidad" id="especialidad"/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label for="file">Foto de perfil</label>
            <input type="file" name="foto_perfil" id="foto_perfil"/>
          </div>
        </div>
        <button class="btn btn-info mb-3" type="submit">Registrarme</button>
        <p><a href="/pages/Login"> Iniciar sesión</a></p>
      </form>
    </div>